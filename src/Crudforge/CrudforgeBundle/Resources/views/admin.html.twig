<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}CRUDForge{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" href="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/themes/cupertino/jquery-ui.css" />
        <link rel="stylesheet" href="{{ asset('bundles/crudforge/css/crudforge.css') }}" />
    </head>
    <body>
        <h1 class="logo">CRUDForge</h1>

        <div id="main-menu">
        {% block menu %}
        {% endblock %}
        </div>

        <div id="side-bar">
        {% block sidebar %}
        <div id="accordion">
          <h3>Admin</h3>
          <div>
              <ul>
                  <li><a href="{{ path('document') }}">Documentos</a></li>
              </ul>
          </div>
          <h3>Documentos</h3>
          <div>
              {% block mydocs %}
              {% endblock %}
          </div>
        </div>
        {% endblock %}
        </div>

        <div id="main-crud">
        {% block body %}{% endblock %}
        </div>



        <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"></script>
        <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js"></script>
        <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.0.6/angular.min.js"></script>
        <script src="{{ asset('bundles/crudforge/js/crudforge.js') }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
