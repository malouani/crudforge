{% extends 'CrudforgeBundle::admin.html.twig' %}
{% block body %}
<h1>Campos list</h1>
<ul class="ulButtons">
    <li>
        <a class="cssButton" href="{{ path('fields_new') }}">
            Novo Campo
        </a>
    </li>
     <li>
        <a class="cssButton" href="{{ path('schemas') }}">
            Voltar para defini&ccedil;&atilde;o dos schemas
        </a>
    </li>
</ul>
<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Schema</th>
            <th>Campo</th>
            <th>Tipo</th>
            <th>Tamanho</th>
            <th>Decimais</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('fields_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.document }}</td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.type }}</td>
            <td>{{ entity.length }}</td>
            <td>{{ entity.scale }}</td>
            <td>
                <ul class="ulButtons">
                    <li>
                        <a class="cssButton" href="{{ path('fields_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a class="cssButton" href="{{ path('fields_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock %}