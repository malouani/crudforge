{% extends '::base.html.twig' %}
{% block body %}
<h2>Fields edit</h2>

<form action="{{ path('fields_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('fields') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('fields_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}